{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "build",
    "rootDir": "src",
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
